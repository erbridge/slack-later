{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    "target": "ES5",
    "esModuleInterop": true,
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    "pretty": true
  },
  "include": ["./src/**/*"]
}
